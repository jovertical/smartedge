{
    "name": "palonponjovertlota/smartedge",
    "type": "project",
    "description": "Smart Edge - Exam reviewer app",
    "license": "proprietary",
    "require": {
        "php": "^7.4",
        "fideloper/proxy": "^4.0",
        "laravel/airlock": "^0.2.0",
        "laravel/framework": "^6.2",
        "laravel/tinker": "^2.0"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.6",
        "facade/ignition": "^1.4",
        "friendsofphp/php-cs-fixer": "^2.16",
        "fzaninotto/faker": "^1.9.1",
        "mockery/mockery": "^1.0",
        "mpociot/laravel-apidoc-generator": "^4.2",
        "nunomaduro/collision": "^3.0",
        "nunomaduro/phpinsights": "^1.12",
        "phpunit/phpunit": "^8.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "format": [
            "./vendor/bin/php-cs-fixer fix ."
        ],
        "test:insights": [
            "./vendor/bin/phpinsights analyse --config-path=config/insights.php --min-quality=85 --min-complexity=85 --min-architecture=85 --min-style=85 ."
        ],
        "test:unit": [
            "./vendor/bin/phpunit"
        ],
        "test": [
            "composer test:insights",
            "composer test:unit"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    }
}
